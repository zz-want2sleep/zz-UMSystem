<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cmpay.zz.dao.IUsersDao" >

    <!--    登录-->
        <select id="Login"  resultMap="BaseResultMap">
            select
            <include refid="Base_Column_List"></include>
            from users
            where login_name = #{loginName,jdbcType=VARCHAR} and password = #{password,jdbcType=VARCHAR}
        </select>


    <!--    根据用户姓名查询-->
    <select id="getUserByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"></include>
        from users
        where login_name = #{loginName,jdbcType=VARCHAR}
    </select>

<!--    更新密码-->
    <update id="updatePassword" parameterType="java.util.Map">
update users
        <set>
            <if test="newPassword != null" >
                password = #{newPassword,jdbcType=VARCHAR},
            </if>
        </set>
        where user_id = #{userId,jdbcType=BIGINT}
    </update>

</mapper>